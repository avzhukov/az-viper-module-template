{% include 'header' %}

#import "{{ prefix }}{{ module_info.name }}Router.h"

@implementation {{ prefix }}{{ module_info.name }}Router

#pragma mark - {{ prefix }}{{ module_info.name }}RouterInput
- (void)closeModule {

    if (self.source.navigationController) {
        [self.source.navigationController popViewControllerAnimated:YES];
    } else {
        [self.source dismissViewControllerAnimated:YES completion:nil];
    }
}

- (void)openModuleFromWindow:(UIWindow *)window {
    [window setRootViewController:_source];
}
- (void)openModuleFromViewController:(UIViewController *)viewController {
    [viewController presentViewController:_source animated:YES completion:nil];
}

@end
